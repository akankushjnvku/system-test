<?xml version='1.0' encoding='UTF-8'?>
<services version='1.0'>
  <admin version='2.0'>
    <adminserver hostalias='node1'/>
    <configservers>
      <configserver hostalias="node1"/>
    </configservers>
    <cluster-controllers>
      <cluster-controller hostalias="node1" />
    </cluster-controllers>
  </admin>

  <container id='combinedcontainer' version='1.0'>
    <search/>
    <document-processing/>
    <document-api/>
    <nodes jvmargs=" -verbose:gc -Xms8g -Xmx8g -XX:NewRatio=1 -XX:+PrintGCDetails ">
      <node hostalias='node1'/>
    </nodes>
  </container>

  <content id="contentnode" version="1.0">
    <config name='vespa.config.search.core.proton'>
      <summary>
        <log>
          <chunk>
            <compression>
              <level>3</level>
            </compression>
          </chunk>
          <maxdiskbloatfactor>1.0</maxdiskbloatfactor>
        </log>
      </summary>
    </config>
    <redundancy reply-after='1'>1</redundancy>
    <documents>
      <document type='doc' mode="index"/>
    </documents>
    <nodes>
      <node distribution-key='0' hostalias='node1'/>
    </nodes>
  </content>

  <service command='/opt/vespa/bin/vespa-destination --instant --silent 1000000000' name='devnull' version='1.0'>
    <node hostalias='node1'/>
  </service>

</services>
