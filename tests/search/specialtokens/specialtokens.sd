search specialtokens {

  document specialtokens {
    field lang type string {
      indexing: set_language
    }

    field id type string {
      indexing: summary | index
    }

    field content type string {
      indexing: summary | index
    }
  }
  fieldset default {
    fields: content
  }
 
  document-summary juniper {
    summary jcontent type string {
      dynamic
      source: content
    }
  }
}
