<?xml version="1.0" encoding="utf-8" ?>
<services version="1.0">

  <service id="pinglocalhost" name="pinglocalhost" command="/bin/ping localhost" version="1.0">
    <node hostalias="node1"/>
    <node hostalias="node2"/>
  </service>

  <service id="pinglo" name="pinglo" command="ping 127.0.0.1" version="1.0">
    <node hostalias="node1"/>
    <node hostalias="node1"/> <!-- Second service on node 1-->
    <node hostalias="node2"/>
    <node hostalias="node3"/>
    <node hostalias="node4"/>
  </service>
  
  <admin version="2.0">
    <adminserver hostalias="node1"/>
    <slobroks>
      <slobrok hostalias="node1"/>
    </slobroks>
  </admin>

  <container version="1.0">
    <nodes>
      <node hostalias="node1"/>
    </nodes>
    <document-api/>
  </container>

  <content version="1.0">
    <documents>
      <document type="music" mode="index" />
    </documents>
    <redundancy>1</redundancy>
    <group name="foo">
      <node hostalias="node1" distribution-key="0"/>
    </group>
  </content>

</services>
